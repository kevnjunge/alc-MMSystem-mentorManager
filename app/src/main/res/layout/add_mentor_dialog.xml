<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/requestView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mentor_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/mukta_semibold"
                android:text="Add Mentor"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:textColor="@color/mms_black_2"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mentor_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="102dp"
                android:fontFamily="@font/mukta_regular"
                android:text="Email"
                android:textColor="@color/mms_black_6"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailinput"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_border_background"
                android:fontFamily="@font/mukta_regular"
                android:hint="samkebede@gmail.com"
                android:textAlignment="textStart"
                android:textColor="@color/mms_black_6"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mentor_mail">

            </EditText>

            <Button
                android:id="@+id/send_mentor"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="302dp"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="@color/mms_pry_2"
                android:fontFamily="@font/mukta_semibold"
                android:text="Send"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/mms_black_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailinput" />

            <Button
                android:id="@+id/cancel_mentor"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="302dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/mukta_semibold"
                android:text="Cancel"
                android:textColor="@color/mms_pry_2"
                android:textSize="18sp"
                app:backgroundTint="@color/mms_pry_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/send_mentor"
                app:strokeColor="@color/mms_pry_8"
                app:strokeWidth="1dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>